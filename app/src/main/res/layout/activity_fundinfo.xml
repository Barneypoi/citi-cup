<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar_for_all" />

    <include layout="@layout/block_fundinfo"/>

    <include layout="@layout/listitem_jumptodetail"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/tv_fundInfo_idLabel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20dp"
            android:padding="5dp"
            android:text="基金代号"
        />

        <TextView
            android:id="@+id/tv_fundInfo_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_fundInfo_idLabel"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_fundInfo_typeLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fundInfo_idLabel"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:text="基金类型"
            />

        <TextView
            android:id="@+id/tv_fundInfo_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@id/tv_fundInfo_id"
            android:layout_toRightOf="@id/tv_fundInfo_typeLabel"
            android:textSize="20dp"
            android:padding="5dp" />
        <TextView
            android:id="@+id/tv_fundInfo_riskLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fundInfo_typeLabel"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:text="风险类型"
            />

        <TextView
            android:id="@+id/tv_fundInfo_risk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@id/tv_fundInfo_type"
            android:layout_toRightOf="@id/tv_fundInfo_riskLabel"
            android:textSize="20dp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_fundInfo_netweighLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fundInfo_riskLabel"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:text="基金净值"
            />

        <TextView
            android:id="@+id/tv_fundInfo_netweigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@id/tv_fundInfo_risk"
            android:layout_toRightOf="@id/tv_fundInfo_netweighLabel"
            android:textSize="20dp"
            android:padding="5dp"/>

    </RelativeLayout>

<Button
    android:id="@+id/addOrRemoveFavButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:text="加入自选"/>


</LinearLayout>
</ScrollView>