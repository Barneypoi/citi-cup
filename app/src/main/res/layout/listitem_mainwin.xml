<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_mainwin_fundName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="FundName"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_mainwin_fundRate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="5.2%"
            android:textColor="@color/highlighttext"
            android:textSize="25sp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="七日年化收益率"
            android:textColor="@color/subtitlecolor"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">
        <TextView
            android:paddingTop="20dp"
            android:id="@+id/tv_mainwin_info1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="otherinfo1"
            android:gravity="right"
            android:textColor="@color/subtitledarkercolor"/>
        <TextView
            android:id="@+id/tv_mainwin_info2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="otherinfo2"
            android:gravity="right"
            android:textColor="@color/subtitledarkercolor"/>
    </LinearLayout>
</LinearLayout>